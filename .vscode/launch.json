{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Electron: Main",
      "type": "node",
      "request": "launch",
      "protocol": "inspector",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run",
        "start"
      ],
      "env": {
        "MAIN_ARGS": "--inspect=5858 --remote-debugging-port=9223"
      }
    },
    {
      "name": "Electron: Renderer",
      "type": "chrome",
      "request": "attach",
      "port": 9223,
      "webRoot": "${workspaceFolder}",
      "timeout": 15000
    },
    {
      "name": "API: FastAPI (TransformerLab)",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "cwd": "${workspaceFolder}/api",
      "python": "${userHome}/.transformerlab/envs/transformerlab/bin/python",
      "args": [
        "api:app",
        "--reload",
        "--port",
        "8338",
        "--host",
        "0.0.0.0",
        "--timeout-graceful-shutdown",
        "1"
      ],
      "env": {
        "TLAB_DIR": "${userHome}/.transformerlab",
        "LD_LIBRARY_PATH": "${userHome}/.transformerlab/envs/transformerlab/lib:${env:LD_LIBRARY_PATH}"
      },
      "envFile": "${workspaceFolder}/.env",
      "jinja": true
    },
    {
      "name": "CLI: TypeScript (Interactive)",
      "type": "pwa-node",
      "request": "launch",
      "cwd": "${workspaceFolder}/cli",
      "runtimeArgs": [
        "-r",
        "ts-node/register"
      ],
      "args": [
        "help"
      ],
      "program": "${workspaceFolder}/cli/src/index.ts",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Attach to CLI",
      "port": 9229,
      "skipFiles": ["<node_internals>/**"],
      "outFiles": ["${workspaceFolder}/cli/dist/**/*.js"],
      "sourceMaps": true,
      "resolveSourceMapLocations": [
        "${workspaceFolder}/cli/**",
        "!**/node_modules/**"
      ],
      "cwd": "${workspaceFolder}/cli"
    }
  ],
  "compounds": [
    {
      "name": "Electron: All",
      "configurations": [
        "Electron: Main",
        "Electron: Renderer"
      ]
    }
  ]
}
