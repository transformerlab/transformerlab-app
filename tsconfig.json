{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "ES2020"],
    "jsx": "react-jsx",
    "strict": true,
    "sourceMap": true,
    "baseUrl": "./src",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "noEmit": true,
    "types": ["vite/client"],
    "paths": {
      "renderer/*": ["renderer/*"],
      "main/*": ["main/*"]
    }
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "release",
    "api",
    "cli/dist",
    "*.css.d.ts",
    "*.sass.d.ts",
    "*.scss.d.ts"
  ]
}
